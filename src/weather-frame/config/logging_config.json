{
    "version": 1,
    "disable_existing_loggers": false,
    
    "formatters": {
        "default": {
            "format": "%(levelname)s - %(asctime)s - %(name)s - %(message)s"
        },
        "json": {
            "()": "ems.logging.MyJSONFormatter",
            "fmt_keys": {
                "asctime": "timestamp",
                "logger": "name",
                "levelname": "levelname",
                "message": "message"
            }
        }
    },
    
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "default",
            "stream": "ext://sys.stdout"
        },
        "to_json": {
            "class": "logging.FileHandler",
            "level": "WARNING",
            "formatter": "json",
            "mode": "w"
        }
    },

    "loggers": {
        "root": {
            "level": "DEBUG",
            "handlers": [
                "console",
                "to_json"
            ],
            "propagate": true
        }
    }
}